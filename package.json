{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "node ./configure-references.js || echo 'skipping configure references!'",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream --parallel",
    "test": "yarn jest \"packages/.*\\.(spec|test)\\.ts$\" --coverage",
    "pub": "lerna publish"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.20",
    "eslint": "^8.6.0",
    "prettier": "^2.5.1",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "jest": {
    "preset": "<rootDir>/"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
