{
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ES2019"
    ],
    "resolveJsonModule": true,
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./packages",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "paths": {
      "@proxima-one/pulumi-*": [
        "*/src"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "files": [],
  "references": [
    {
      "path": "packages/bsc-node"
    },
    {
      "path": "packages/ethereum-node"
    },
    {
      "path": "packages/helpers"
    },
    {
      "path": "packages/indexer"
    },
    {
      "path": "packages/polygon-node"
    },
    {
      "path": "packages/proxima-node"
    }
  ]
}
